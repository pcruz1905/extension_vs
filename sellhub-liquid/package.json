{
  "name": "sellhub-liquid-workspace",
  "description": "VS Code extension for Sellhub Liquid syntax highlighting and component management",
  "displayName": "Sellhub Liquid",
  "categories": [
    "Programming Languages"
  ],
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pcruz1905/extension_vs"
  },
  "private": true,
  "scripts": {
    "clean": "npm run clean --workspaces",
    "watch": "tsc -b tsconfig.build.json --watch",
    "build": "tsc -b tsconfig.build.json && npm run build --workspaces",
    "build:clean": "npm run clean && npm run build",
    "langium:generate": "npm run --workspace packages/language langium:generate",
    "langium:watch": "npm run --workspace packages/language langium:watch"
  },
  "devDependencies": {
    "@types/node": "~20.17.48",
    "shx": "~0.4.0",
    "typescript": "~5.8.3",
    "vscode": "^1.1.37"
  },
  "volta": {
    "node": "20.19.2",
    "npm": "10.8.2"
  },
  "workspaces": [
    "packages/language",
    "packages/extension"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.930.0"
  }
}
